<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Greeting Layout Styles-->
    <style name="GreetingButtonContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/basic_margin</item>
    </style>

    <style name="GreetingButtonStyle">
        <item name="android:layout_width">@dimen/greeting_button_width</item>
        <item name="android:layout_height">@dimen/greeting_button_height</item>
        <item name="android:layout_margin">@dimen/basic_margin</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="GreetingQuestionStyle">
        <item name="android:text">@string/opening_greeting_question</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/basic_margin</item>
        <item name="android:layout_marginLeft">@dimen/basic_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GreetingSupportStyle">
        <item name="android:text">@string/opening_greeting_support</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/basic_margin</item>
        <item name="android:layout_marginLeft">@dimen/basic_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Utility Layout Styles-->
    <style name="UtilityLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/utility_layout_height</item>
        <item name="android:layout_weight">@integer/utility_layout_weight</item>
        <item name="android:background">@color/utility_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UtilityButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/utility_image_margin_left</item>
        <item name="android:layout_marginRight">@dimen/utility_image_margin_right</item>
        <item name="android:layout_width">@dimen/utility_icon_width</item>
        <item name="android:layout_height">@dimen/utility_icon_height</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
