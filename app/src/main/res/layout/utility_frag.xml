<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/utility_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/add_person_image_view"
        android:layout_width="@dimen/utility_icon_width"
        android:layout_height="@dimen/utility_icon_height"
        android:contentDescription="@string/add_person_content_description"
        android:src="@drawable/ic_add_person" />

    <ImageView
        android:id="@+id/refresh_image_view"
        android:layout_width="@dimen/utility_icon_width"
        android:layout_height="@dimen/utility_icon_height"
        android:contentDescription="@string/refresh_content_description"
        android:src="@drawable/ic_refresh" />

    <ImageView
        android:id="@+id/settings_image_view"
        android:layout_width="@dimen/utility_icon_width"
        android:layout_height="@dimen/utility_icon_height"
        android:contentDescription="@string/settings_content_description"
        android:src="@drawable/ic_settings" />

</LinearLayout>