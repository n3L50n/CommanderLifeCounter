<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UtilityButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/utility_image_margin_left</item>
        <item name="android:layout_marginRight">@dimen/utility_image_margin_right</item>
        <item name="android:layout_width">@dimen/utility_icon_width</item>
        <item name="android:layout_height">@dimen/utility_icon_height</item>
    </style>

</resources>
