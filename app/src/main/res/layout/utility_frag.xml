<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/utility_view"
    style="@style/UtilityLayoutStyle">

    <Button
        android:id="@+id/add_person_image_view"
        style="@style/UtilityButtonStyle"
        android:contentDescription="@string/add_person_content_description"
        app:srcCompat="@drawable/ic_add_person" />

    <Button
        android:id="@+id/reset_image_view"
        style="@style/UtilityButtonStyle"
        android:contentDescription="@string/refresh_content_description"
        app:srcCompat="@drawable/ic_refresh" />

    <Button
        android:id="@+id/settings_image_view"
        style="@style/UtilityButtonStyle"
        android:contentDescription="@string/settings_content_description"
        app:srcCompat="@drawable/ic_settings" />

</LinearLayout>